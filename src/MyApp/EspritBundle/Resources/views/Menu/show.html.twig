 <td>{#{ menu.utilisateur.id}}</td>
{#% endif %#} 
 
        
        <td><a href="{{ path('my_app_esprit_menu_delete',{'id':menu.id}) }}">  <img src="{{ asset('bundles/myappesprit/images/delete.png') }}" alt="" />  </a></td>
        <td><a href="{{ path('my_app_esprit_menu_edit',{'id':menu.id}) }}">  <img src="{{ asset('bundles/myappesprit/images/update.png') }}" alt="" />  </a></td>

        {% endfor %}
    </tr>        
    
 

</table></div>
    <h2><a href="{{ path('my_app_esprit_menu_new') }}">ajouter menu</a></h2>
</center>
