 
<!DOCTYPE html>
<html>
<head>
    <link rel="icon" sizes="16x16" href="{{ asset('favicon.ico') }}" /> 
    <title>Liste Actualités</title>
      <link rel="stylesheet" type="text/css" media="screen" href="{{ asset('bundles/myappesprit/css/show.css') }}"/> 

</head>

<body>
    <div style="padding: 120px 50px 0 10px;">
<h2>Les Actualités</h2>
<center >
<table class="bordered" >
    <thead>

    <tr>
        <th>#</th>        
        <th>Titre</th>
        <th>Date Insertion</th>
        <th>Description</th>
        <th>Utilisateur associé</th>
        <th>Image</th>
        
    
    </tr>
    </thead>
   
       {% for actualite in actualite %}
     <tr>
        <th>{{ actualite.id }}</th> 
        <td>{{ actualite.titre }}</td>
        <td>{{ actualite.dateinsertion|date('d/m/Y')  }}</td> <!-- date ici pas converti -->
        <td>{{ actualite.description }}</td>
       <td><b>No  </b>{{ actualite.utilisateur.id}}</td>
       
       {% if actualite.image is  not  null %}
        <td><img src="{{ actualite.image }}" alt="" width="100" height="100" class="img-border"></td>
       {% endif %}
        
        {#si je mets pas d image dans la BD une autre s'affiche #} 
        {% if actualite.image is   null %}
         <td> <img src="http://upload.wikimedia.org/wikipedia/commons/a/ac/No_image_available.svg" alt="{{ actualite.image }}"alt="" width="100" height="100" class="img-border" /></td>
        {% endif %}
           
           
           
           
           
           
           
           
        <td><a href="{{ path('my_app_esprit_actualite_delete',{'id':actualite.id}) }}">  <img src="{{ asset('bundles/myappesprit/images/delete.png') }}" alt="" />  </a></td>
        <td><a href="{{ path('my_app_esprit_actualite_edit',{'id':actualite.id}) }}">  <img src="{{ asset('bundles/myappesprit/images/update.png') }}" alt="" />  </a></td>

        {% endfor %}
    </tr>        
    
 

</table>
    <h2><a href="{{ path('my_app_esprit_actualite_new') }}">ajouter actualité</a></h2>
</center>
    </div>

</body>
</html>
 
   